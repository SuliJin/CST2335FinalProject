<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="tianjunjin.androidfinalproject.f_activity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_f"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/darker_gray"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light"
            >
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_title"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="@string/title_activity_f"
                    android:textSize="30dp" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/f_gridlayout"
        android:layout_width="match_parent"
        android:layout_height="511dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#83a8ef"
        android:columnCount="2"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="118dp">


        <Button
            android:id="@+id/f_button_history"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="@string/f_history"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
        android:id="@+id/f_button_new"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="@string/f_newrecord"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible" />
        <TextView
            android:id="@+id/textView_blank3"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ProgressBar
            android:id="@+id/f_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/textView_blank6"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/f_average_calories"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="@string/f_average_calories"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <Button
            android:id="@+id/f_calories_eaten"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="@string/f_calories_eaten"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <TextView
            android:id="@+id/textView_blank5"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <!--<FrameLayout-->
            <!--android:id="@+id/f_FrameLayout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_below="@+id/f_progressBar"-->
            <!--android:background="#d3dbf8" />-->

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="117dp"
        android:layout_marginTop="179dp"
        app:srcCompat="@android:drawable/ic_dialog_email" />



</RelativeLayout>