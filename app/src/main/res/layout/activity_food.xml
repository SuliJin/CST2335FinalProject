<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tianjunjin.androidfinalproject.FoodActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/foodActivityBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".75"
                android:background="#13e8ef"
                android:text="@string/title_activity_food"
                android:padding="8dp"
                android:textSize="15dp"
                android:gravity="left|center_vertical"
                android:textColor="#3F51B5"/>

            <Button
                android:id="@+id/addButton_food"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="@color/colorPrimary"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="add" />
        </LinearLayout>
</android.support.v7.widget.Toolbar>
        <ListView
        android:id="@+id/ListView_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/foodActivityBar">
        </ListView>

    <ProgressBar
        android:id="@+id/progressBar_f"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="304dp"
        tools:visibility="visible"
        android:layout_centerInParent="true"
       />
    android:layout_below="@+id/ListView_food"

</RelativeLayout>


