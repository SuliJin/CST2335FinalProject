<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sulijin.androidfinalproject.ActivityTrackingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/newActivityBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".75"
                android:background="#13e8ef"
                android:text="@string/t_activities"
                android:padding="8dp"
                android:textSize="20dp"
                android:gravity="left|center_vertical"
                android:textColor="#3F51B5"/>

            <ImageView
                android:id="@+id/newActivity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_add_box_white_48dp"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <ProgressBar
        android:id="@+id/t_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newActivityBar"
        android:layout_marginTop="25dp"
        android:background="#a7e5f6"
        android:progress="@android:integer/config_shortAnimTime"
        android:progressTint="@android:color/holo_red_light"
        android:visibility="invisible" />
    <ListView
        android:id="@+id/t_activitListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newActivityBar" />


</RelativeLayout>
